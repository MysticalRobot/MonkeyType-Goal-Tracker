{
	"manifest_version": 3,
	"name": "MonkeyType Goal Tracker",
	"version": "1.0",
	"description": "A tool that helps reach daily MonkeyType typing goals and tracks goal achievement streaks.",
	"homepage_url": "https://github.com/mysticalrobot/monkeytype-goal-tracker",
	"browser_specific_settings": {
		"gecko": {
			"id": "{f3c0eabd-523c-4704-8601-9ac925c8613c}"
		}
	},
	"icons": {
		"16": "icon.svg",
		"32": "icon.svg",
		"48": "icon.svg",
		"64": "icon.svg",
		"96": "icon.svg",
		"128": "icon.svg",
		"256": "icon.svg"
	},
	"action": {
		"default_icon": "icon.svg",
		"default_title": "MonkeyType Goal Tracker",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
    "icon.svg"
	],
  "background": {
    "scripts": ["background.js"]
  },
	"content_scripts": [
		{
			"matches": ["*://*.monkeytype.com/*"],
			"js": ["content.js"]
		}
	],
	"permissions": [
		"storage"
	]
}
